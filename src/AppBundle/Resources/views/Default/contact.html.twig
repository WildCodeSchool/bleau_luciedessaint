{% extends 'base.html.twig' %}

{% block body %}
    <header>
        <div class="container-fluid"><!-- Top Bar noir -->
            <div class="row">
                <div class="col-md-6 rowblack text-center textwhite"><h1>Nous contacter</h1></div>
            </div>
        </div><!-- Fin top bar noir -->
    </header>
    <div class="space"></div>
    <div class="space"></div>
    {{ form_start(form) }}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <div class="form-group">
                    {{ form_errors(form.mail) }}
                    {{ form_widget(form.mail, { 'attr': {'class': 'form-control Libelle', 'placeholder': 'Adresse mail' }}) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.sujet) }}
                    {{ form_widget(form.sujet, { 'attr': {'class': 'form-control Libelle', 'placeholder': 'Sujet' }}) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.message) }}
                    {{ form_widget(form.message, { 'attr': {'class': 'form-control Libelle', 'placeholder': 'Message', 'rows': "6" }}) }}
                </div>
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="envoyer" />
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}